# Example environment file for Multi-Agent Competitive Intelligence System
# Copy this to .env and fill in your actual API keys

# Hugging Face API Token (required for meta-llama/Llama-3.2-1B-Instruct)
HF_TOKEN=your_huggingface_token_here

# Alternative LLM endpoints (not currently used - using HuggingFace)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# SerpAPI key for enhanced search (optional, fallback to DuckDuckGo)
# SERPAPI_API_KEY=your_serpapi_key_here

# Logging configuration
LOG_LEVEL=INFO

# Search configuration
MAX_SEARCH_RESULTS=10
MAX_CONTENT_LENGTH=5000

# Model configuration
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-1B-Instruct
MODEL_MAX_LENGTH=4096
MODEL_TEMPERATURE=0

# Rate limiting
REQUESTS_PER_MINUTE=30

# Output configuration
DEFAULT_OUTPUT_FORMAT=json
OUTPUT_DIR=./outputs
